{
  "name": "dl-code",
  "version": "1.6.4",
  "description": "web app for product hositng and download code generating",
  "main": "index.functions.js",
  "repository": "https://github.com/TatsuyaYamamoto/dl-code.git",
  "author": "TatsuyaYamamoto <yamamoto.tatsuya@fujixerox.co.jp>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "12",
    "npm": "7"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "next dev app",
    "start": "firebase emulators:start",
    "build:client": "run-s build:client:*",
    "build:client:build": "next build app",
    "build:client:static-export": "next export app -o dist/public",
    "build:functions": "run-s build:functions:*",
    "build:functions:build": "tsc --project app/tsconfig.functions.json",
    "build:functions:copy-deps": "run-s build:functions:copy-deps:*",
    "build:functions:copy-deps:copy": "cp {package.json,package-lock.json} 'dist/functions'",
    "build:functions:copy-deps:install": "npm install --prefix dist/functions",
    "build-dev": "cross-env NODE_ENV=development npm-run-all --print-label --parallel build:*",
    "build-pro": "cross-env NODE_ENV=production  npm-run-all --print-label --parallel build:*",
    "lint": "npm-run-all --print-label --parallel lint:*",
    "lint:eslint": "eslint app",
    "lint:prettier": "prettier --check app/**/*.{ts,tsx}",
    "fix": "npm-run-all --print-label --parallel fix:*",
    "fix:eslint": "eslint --fix app",
    "fix:prettier": "prettier --write app/**/*.{ts,tsx}",
    "deploy-dev": "firebase deploy --project dl-code-dev",
    "deploy-dev:hosting": "firebase deploy --project dl-code-dev --only hosting",
    "deploy-pro": "firebase deploy --project dl-code",
    "storybook": "start-storybook",
    "e2e": "codeceptjs run --config test/e2e --steps",
    "e2e-ui": "codecept-ui --config test/e2e --app",
    "prepare": "echo 'this package.json does not run `husky install` because it fails in firebase functions env'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^1.15.0",
    "@date-io/luxon": "^1.3.13",
    "@google-cloud/firestore": "^4.12.3",
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/pickers": "^3.3.10",
    "@slack/client": "^5.0.2",
    "dexie": "^2.0.4",
    "firebase": "^8.6.8",
    "firebase-admin": "^9.9.0",
    "firebase-functions": "^3.14.1",
    "hi-base32": "^0.5.1",
    "jsqr": "^1.4.0",
    "luxon": "^1.27.0",
    "material-table": "^1.69.3",
    "next": "^10.2.3",
    "notistack": "^1.0.9",
    "nprogress": "^0.2.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-dropzone": "^11.3.2",
    "react-ga": "^3.3.0",
    "react-sortable-hoc": "^2.0.0",
    "react-string-replace": "^0.4.4",
    "styled-components": "^5.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@codeceptjs/ui": "^0.4.6",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@types/luxon": "^1.27.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^16.9.13",
    "@types/styled-components": "^5.1.10",
    "@types/uuid": "^8.3.0",
    "codeceptjs": "^3.0.7",
    "cross-env": "^7.0.3",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "firebase-tools": "^9.14.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.12.1",
    "prettier": "^2.3.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "webdriverio": "^7.7.4"
  }
}
